{
  "name": "joi-browser",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/bundle.js",
  "scripts": {
    "prepublish": "npm run build-browserify",
    "build-browserify": "browserify src/joi-browser.js -s Joi -t babelify | derequire | ntee dist/bundle.js | uglifyjs - -c warnings=false -m | ntee dist/bundle.min.js | ngzip > dist/bundle.min.js.gz",
    "postinstall": "viralify . -t babelify -t aliasify -f -p joi -p hoek -p topo -p isemail"
  },
  "author": "",
  "license": "MIT",
  "aliasify": {
    "aliases": {
      "crypto": "browserify/lib/_empty"
    }
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ],
    "presets": [
      "es2015"
    ]
  },
  "devDependencies": {
    "aliasify": "^1.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.2.0",
    "babel-preset-es2015": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "derequire": "^2.0.3",
    "ngzip": "^1.1.3",
    "ntee": "^1.1.4",
    "uglify-js": "^2.6.1",
    "viralify": "^0.4.2"
  },
  "dependencies": {
    "joi": "^7.0.1"
  }
}
